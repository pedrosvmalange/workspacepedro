package repeticao;

public class ExemploFor {

	public static void main(String[] args) {
		
		
		/*
		 * Sintaxe do For
		 * 1ª Parte: definimos o contador e o valor inicial
		 * 2ª Parte: condição (enquanto for verdadeiro o laço irá continuar)
		 * 3ª Parte: como ocorrerá a contagem
		 */
		
		/*
		for (int contador=1 ; contador<500; contador++) {
			
			System.out.println(contador);
		}
		
		
		for (int contador=1 ; contador<500; contador+=2) {
			
			System.out.println(contador);
		}
		
		*/
		
		for (int contador=100 ; contador>0; contador--) {
			
			System.out.println(contador);
		}
		
		
		
		

	}

}
