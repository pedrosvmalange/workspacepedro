package variaveis;

public class TipoString {

	public static void main(String[] args) {
		
		// String é um tipo de referência;
		// Date é um tipo de referência (começam com letra maiuscula);
				
		String email = "PedrOsvmalangE@gmail.com";
		
		System.out.println("Original: " + email);
		System.out.println("Maiusculo: " + email.toUpperCase());
		System.out.println("Minusculo: " + email.toLowerCase());
		System.out.println("Qtde Caracteres: " + email.length());
		// length retorna a quantidade de caracteres da STRING
		System.out.println("Tem arroba?: " + email.contains("@"));
		// contais retorna TRUE or FALSE (boolean) sobre a existência do caracter
		System.out.println("Posição do Arroba?: " + email.indexOf("@"));
		// indexOF retorna a posição do caracter procurado (lembrando que a primeira posição é sempre ZERO)
		System.out.println("Do 2º até o 4º caracter?: " + email.substring(1,4));
		// Substring retorna os caracteres no intervalo informado, nesse caso de 2 a 4 (na sintaxe colocamos de 1 a 4 porém o final é sempre menos 1);
		System.out.println("A partir do 3º: " + email.substring(2));
		// retorna do 2 caracter em diante. Faz-se isso quando não sabemos a quantidade de caracteres que a STRING possui
		System.out.println("Usuário do email: " + email.substring(0,email.indexOf("@")));
		// exibe somente o usuário do email (tudo antes do @)
		System.out.println("Provedor do email: " + email.substring (email.indexOf("@")+1));
		// exibe somente o provedor do email
		
		
		
		
		
		/*
		 * Posição dos Caracteres
		 * 
		 * P E D R O
		 * 0 1 2 3 4 (o primeiro carcater é sempre o 0)
		 */
		 
		
		

	}

}
